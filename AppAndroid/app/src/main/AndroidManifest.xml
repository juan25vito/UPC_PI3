<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.distribuidora.appandroid" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocationFoundActivity"
            android:label="@string/title_activity_location_found" >
        </activity>
        <activity
            android:name=".Controller.TitleNavigationAdapter"
            android:label="@string/title_activity_title_navigation_adapter" >
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_search_results" >
        </activity>
        <activity
            android:name=".Controller.ClienteActivity"
            android:label="@string/title_activity_cliente" >
        </activity>
    </application>

</manifest>
